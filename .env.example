# .env.example (MySQL Version)
# Minimum required configuration for IdeaHub MVP

# Environment mode (development/production)
ENVIRONMENT=development

# Database configuration (MySQL)
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/ideahub

# Security settings
SECRET_KEY=your-super-secret-key-change-in-production
RECAPTCHA_SECRET=your-google-recaptcha-v3-secret-key

# Rate limiting
SUBMISSION_RATE_LIMIT=5/hour
VOTING_RATE_LIMIT=1/minute

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring
ENABLE_PROMETHEUS=true

# Database tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10